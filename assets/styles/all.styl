*
  margin 0
  padding 0
  box-sizing border-box 
  -webkit-box-sizing border-box
  -moz-box-sizing border-box

a
  text-decoration none
  color lighten(#0E3B40, 10%)
  &:hover
    border-bottom 1px dashed lighten(#0E3B40, 10%)

body
  background white
  font-family Helvetica, arial, sans-serif
  color: #555
  font-weight 200
  
.container
  width 860px
  margin: 0 auto
  padding-bottom 25px

.banner
  width 100%
  max-height 450px
  position relative
  padding 60px 0
  img
    position absolute
    bottom 0
    left 0
    max-width 100%
    z-index 1
  h1
    padding-top 66px
    font-size: 37px
    opacity: 0.7
    margin 0 auto
    width 240px
    height 240px
    border-radius 240px
    background rgba(255,255,255,0.4)
    border 6px solid lighten(#0E3B40, 10%)
    text-align center
    font-family "Pacifico"
    color lighten(#0E3B40, 10%)
    position relative
    text-rendering optimizeLegibility
    -webkit-font-smoothing antialiased
    font-weight 200
    z-index 2
    span
      display block
      text-align center
      font-family "Helvetica Neue", Helvetica, sans-serif
      font-size 40px
      margin-top -15px
      
.photos
  .photo
    position relative
    opacity 0.8
    display block
    float left
    width 25%
    padding 2px
    .inner
      overflow hidden
      height 160px
      width 100%
      position relative  
    img
      display block
      max-width 211px
      position absolute
      top 0
      left 0
    &:hover
      border 0
      opacity 1.0

.section
  padding-top: 25px
  clear both
  
h2
  font-size: 36px
  font-weight 100
  padding-bottom: 15px
  &.special
    span
      float right
      color #56A632

p, ul
  line-height 1.4

p, ul
  padding 0 5px 15px 5px
  
ul
  padding-bottom 15px
  margin-left 25px
  
